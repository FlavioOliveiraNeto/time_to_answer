<div style="margin: 15px 0 0 0 ">
  <button type="submit" class="btn btn-primary btn-circle btn-lg">
    <a class="nav-link active" aria-current="page" href="http://localhost:3000/">
      <p class="fa fa-home" style="color: white"></p> 
    </a> 
  </button>
</div>
<div>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h1>Login do Usu√°rio</h1>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
          </div>

          <div>
            <%= f.password_field :password, placeholder:"Senha", class:"form-control" %>
          </div>

          <div>
            <%= f.submit "Entrar", class:"btn btn-primary submit", style:"float: none; margin-left: 0px; width: 40%;" %>
            <%= link_to 'Esqueceu a sua senha?', new_user_password_path, class:"reset_pass", style:"font-size:16px; margin:0px" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>