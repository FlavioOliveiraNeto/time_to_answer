<div class="row text-center" style="margin-bottom: 40px">
    <div class="col-lg-12">
        <h1 class="page-header">Seja bem-vindo!</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row" style="display:flex; position:relative;right:-140px">
    <div class="col-xl-4 col-md-6 mb-4" style="margin-right:40px">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total de usuários do sistema!</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_users %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fa fa-users fa-5x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4" style="margin-left:20px">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total de questões do sistema!</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_questions %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fa fa-question-circle fa-5x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>